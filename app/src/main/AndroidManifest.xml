<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.agrobit">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_agrobit_rounded"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activity.FindPartnerActivity"
                android:theme="@style/WhiteCursorTheme"
                android:windowSoftInputMode="adjustPan"></activity>

        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />
        <!--              The API key for Google Maps-based APIs. -->
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/google_maps_key" />

        <activity
                android:name=".activity.NewOrchardActivity"
                android:theme="@style/WhiteFloating"></activity>
        <activity
                android:name=".activity.StartActivity"
                android:theme="@style/WhiteCursorTheme"></activity>
        <activity
                android:name=".account.AccountActivity"
                android:theme="@style/WhiteCursorTheme"></activity>
        <activity
                android:name=".activity.OrchardActivity"
                android:theme="@style/WhiteCursorTheme"></activity>
        <activity
                android:name=".account.ProfileActivity"
                android:theme="@style/WhiteCursorTheme"></activity>
        <activity
                android:name=".account.SignupActivity"
                android:theme="@style/WhiteCursorTheme"></activity>
        <activity
                android:name=".account.LoginActivity"
                android:theme="@style/WhiteCursorTheme"></activity>
        <activity
                android:name=".activity.MainActivity"
                android:theme="@style/WhiteCursorTheme"></activity>
        <activity
                android:name=".activity.SplashActivity"
                android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>